{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "packageRules": [
    {
      "description": "NeoShowcase",
      "groupName": "NeoShowcase",
      "matchPackagePatterns": ["ghcr.io/traptitech/ns-"],
      "matchDatasources": ["docker"],
      "versioning": "semver",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "harbor",
      "groupName": "harbor",
      "matchPackagePatterns": ["ghcr.io/octohelm/harbor/"],
      "matchDatasources": ["docker"],
      "versioning": "semver",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
    {
      "description": "RefSearch",
      "groupName": "RefSearch",
      "matchPackagePatterns": ["ghcr.io/salab/refsearch-"],
      "matchDatasources": ["docker"],
      "versioning": "semver",
      "group": {
        "commitMessageTopic": "{{{groupName}}} group"
      },
      "separateMinorPatch": true
    },
  ]
}
